{
    "name": "team-mate-pro/contracts",
    "description": "A set of contracts in TMP company projects",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "TeamMatePro\\Contracts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamMatePro\\Contracts\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sebastian Twar√≥g",
            "email": "sebastian.twarog1989@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "team-mate-pro/make": "dev-main",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-phpunit": "*",
        "phpstan/phpstan-symfony": "^1.0",
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "phpunit": "APP_ENV=test ./vendor/bin/phpunit tests --testdox --colors=always",
        "tests:unit": "@phpunit",
        "phpcs": "php ./vendor/bin/phpcs --standard=phpcs.xml --exclude=Generic.Files.LineLength",
        "phpcs:fix": "php ./vendor/bin/phpcbf --standard=phpcs.xml --exclude=Generic.Files.LineLength",
        "phpstan": "php vendor/phpstan/phpstan/phpstan analyse --memory-limit=1G"
    }
}
